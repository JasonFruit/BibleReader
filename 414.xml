<?xml version="1.0"?>

<xsl:stylesheet version="1.0"
                xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <xsl:template match="/">
        <html>
            <head>
                <title>
                    <xsl:value-of select="bible/range/result"/>
                </title>
                <style>
                    body {
                    width: 35em;
                    margin-left: 300px;
                    text-align: justify;
                    font-family: the_font; sans;
                    }
                    b.verse {
                    font-family: serif;
                    font-weight: light;
                    vertical-align: super;
                    font-size: 70%;
                    padding-left: 1em;
                    }
                </style>
            </head>
            <body>
                <h2>
                    <xsl:value-of select="bible/range/result"/>
                </h2>
                <xsl:for-each select="bible/range/item">
                    <xsl:if test="verse = 1">
                        <h2 class="chapter">
                            <xsl:value-of select="chapter"/>
                        </h2>
                    </xsl:if>
                    <b class="verse">
                        <xsl:value-of select="verse"/>
                    </b>
                    <span class="verse">
                        <xsl:value-of select="text"/>
                    </span>
                </xsl:for-each>
            </body>
        </html>
    </xsl:template>

</xsl:stylesheet>
